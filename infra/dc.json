{
    "apiVersion": "v1",
    "kind": "DeploymentConfig",
    "metadata": {
        "annotations": {
            "openshift.io/generated-by": "probot-branches"
        },
        "labels": {
            "app": "#{app-name}"
        },
        "name": "#{app-name}-#{branch-name}",
        "namespace": "#{project}"
      },
    "spec": {
        "replicas": 1,
        "selector": {
            "deploymentconfig": "#{app-name}-#{branch-name}"
        },
        "strategy": {
            "activeDeadlineSeconds": 21600,
            "resources": {},
            "rollingParams": {
                "intervalSeconds": 1,
                "maxSurge": "25%",
                "maxUnavailable": "25%",
                "timeoutSeconds": 600,
                "updatePeriodSeconds": 1
            },
            "type": "Rolling"
        },
        "template": {
            "metadata": {
                "creationTimestamp": null,
                "labels": {
                    "app": "#{app-name}-#{branch-name}",
                    "deploymentconfig": "#{app-name}-#{branch-name}"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "OPENSHIFT_NODEJS_PORT",
                                "value": "3000"
                            }
                        ],
                        "image": "172.30.167.198:5000/#{project}/express-app@sha256:a2f5372c3a14a3b61d25c1dac40cfffb58655b9c8e9af0c4a52c4c4551f24577",
                        "imagePullPolicy": "Always",
                        "name": "#{app-name}-#{branch-name}",
                        "ports": [
                            {
                                "containerPort": 8080,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                "dnsPolicy": "ClusterFirst",
                "restartPolicy": "Always",
                "securityContext": {},
                "terminationGracePeriodSeconds": 30
            }
        },
        "test": false,
        "triggers": [
            {
                "imageChangeParams": {
                    "automatic": true,
                    "containerNames": [
                        "#{app-name}-#{branch-name}"
                    ],
                    "from": {
                        "kind": "ImageStreamTag",
                        "name": "#{app-name}-#{branch-name}:latest",
                        "namespace": "#{project}"
                    }
                },
                "type": "ImageChange"
            },
            {
                "type": "ConfigChange"
            }
        ]
    },
    "status": {
        "availableReplicas": 1,
        "readyReplicas": 1,
        "replicas": 1,
        "unavailableReplicas": 0,
        "updatedReplicas": 1
    }
}
