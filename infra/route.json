{
    "apiVersion": "v1",
    "kind": "Route",
    "metadata": {
        "labels": {
            "branch": "#{branch-name}",
            "state": "test"
        },
        "name": "{app-name}-${branch-name}",
        "namespace": "#{project}",
    },
    "spec": {
        "host": "${branch-name}.#{app-name}.apps.ocp.test-demo-dlt.com",
        "port": {
            "targetPort": "3000-tcp"
        },
        "to": {
            "kind": "Service",
            "name": "#{app-name}-#{branch-name}",
            "weight": 100
        },
        "wildcardPolicy": "None"
    },
    "status": {
        "ingress": [
            {
                "host": "${branch-name}.#{app-name}.apps.ocp.test-demo-dlt.com",
                "routerName": "router",
                "wildcardPolicy": "None"
            }
        ]
    }
}
